<article id='talk_<%= talk.id %>' class='talk'>
  <h4><%= talk.title %> (<a title="<%= talk.voter_names %>"><%= talk.votes.count %> going</a>)</h4>
  <small><%= talk.voter_names if talk.votes.any? %></small>
  <%# if current_user && current_user.has_not_voted_for?(talk) %>
    <%= link_to votes_path(talk_id: talk.id), method: :post, remote: true, class: 'im_going btn btn-info', role: 'button' do %>
      I'm going!
    <% end %>
  <%# end %>
</article>
