<p id="notice"><%= notice %></p>

<%= render @conference %>

<% @conference.slots_by_day.each do |day, slots| %>
  <h2 class='day'><%= day %></h2>
  <% slots.each do |slot| %>
    <div class='slot'>
      <h3><%= slot.name %></h3>
      <% slot.talks.each do |talk| %>
        <article class='talk'>
          <h3><%= talk.title %></h3>
        </article>
      <% end %>
    </div>
  <% end %>
<% end %>

<% if current_admin %>
  <p>
    <%= link_to 'Edit', edit_conference_path(@conference) %> |
    <%= link_to 'Back', conferences_path %>
  </p>
<% end %>
