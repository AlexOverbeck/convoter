<p id="notice"><%= notice %></p>

<%= render @conference %>

<ul class="nav nav-tabs">
  <% @conference.slots_by_day.each_with_index do |(day, slots), index| %>
    <li class="<%= 'active' if index == 0 %>">
      <a data-toggle="tab" href="#day_<%= index %>"><%= day %></a>
    </li>
  <% end %>
</ul>

<div class="tab-content">
  <% @conference.slots_by_day.each_with_index do |(day, slots), index| %>
    <div id="day_<%= index %>" class="tab-pane fade in <%= 'active' if index == 0 %>">
      <p>
        <% slots.each do |slot| %>
          <div class='slot'>
            <h3><%= slot.name.split(' ', 3).last %></h3>
            <% slot.talks.each do |talk| %>
              <article id='Talk_<%= talk.id %>' class='talk'>
                <h4><%= talk.title %> (<a title="<%= talk.voter_names %>"><%= talk.votes.count %> going)</h4>
                <%= link_to votes_path(talk_id: talk.id), method: :post, remote: true, class: 'im_going btn btn-info', role: 'button' do %>
                  I'm going!
                <% end %>
              </article>
            <% end %>
          </div>
        <% end %>
      </p>
    </div>
  <% end %>
</div>

<% if current_admin %>
  <p>
    <%= link_to 'Edit', edit_conference_path(@conference) %> |
    <%= link_to 'Back', conferences_path %>
  </p>
<% end %>
