<div class='slot panel panel-default' id='slot_<%= slot.id %>'>
  <div class='panel-heading'>
    <h3 class='panel-title'><%= slot.name.split(' ', 3).last %></h3>
  </div>
  <div class='panel-body list-group'>
    <% slot.talks.each do |talk| %>
      <div class='list-group-item'>
        <%= render partial: 'talks/talk', locals: { talk: talk, current_user: current_user } %>
      </div>
    <% end %>
  </div>
</div>
